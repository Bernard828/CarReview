@model IEnumerable<CarReview.Models.Category>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/CSS/StyleSheet.css" />
    <title>Index</title>
</head>
<body>
    <h1 class="index">Car Categories</h1>
    <div class="categoryList">
        @foreach (var category in Model)
        {
            <article class="category">
                <p class="categoryTitle">Title: 
                    <a href="/Category/Details/@category.CategoryId">@category.CategoryName</a>
                </p>
                <p>
                    <img src="@category.Image" alt="image# @category.CategoryId" />
                </p>
            </article>

        }
        <a href="/Content/Index"> View blog's content</a>
    </div>

</body>
</html>
